<?xml version="1.0" encoding="utf-8"?>
<lazycms>
    <title>文档管理</title>
    <version memo="版本">1.0</version>
    <author memo="作者">Lukin</author>
    <email memo="作者常用邮箱，以便联系">mylukin@gmail.com</email>
    <source memo="作者来自哪里？">http://www.lazycms.net</source>
    <manage>url('Archives')</manage>

    <common>
        <root>根目录</root>
        <addtable>新建索引表</addtable>
        <addpage>添加文档</addpage>
        <editpage>编辑文档</editpage>
        <addsort>添加分类</addsort>
        <editsort>编辑分类</editsort>
        <createrss>生成RSS</createrss>
        <createsitemaps>生成SiteMaps</createsitemaps>
        <createsort>只生成列表</createsort>
        <createpage>只生成文档</createpage>
        <createall>生成列表及文档</createall>
        <pinyin>拼音</pinyin>
    </common>
    
    <sort>
        <id>ID</id>
        <name>分类名称</name>
        <model>模型</model>
        <count>文档数</count>
        <path>路径</path>
        <action>操作</action>
    </sort>
    
    <list>
        <id>ID</id>
        <title>标题</title>
        <top>置顶</top>
        <show>显示</show>
        <commend>推荐</commend>
        <path>路径</path>
        <date>发布日期</date>
        <action>操作</action>
    </list>

    <label>
        <supsort>上级分类</supsort>
        <sortname>分类名称</sortname>
        <sortpath>路径 (不支持特殊符号；不能以/开始或结束)</sortpath>
        <model>内容模型 (添加后不可修改)</model>
        <keywords>Meta 关键词 (Max=250)</keywords>
        <description>Meta 简述 (Max=250)</description>
        <sorttemplate1>列表页外部模板</sorttemplate1>
        <sorttemplate2>列表页内部模板</sorttemplate2>
        <pagetemplate1>内容页外部模板</pagetemplate1>
        <pagetemplate2>内容页内部模板</pagetemplate2>

        <archive>
            <info>文档属性</info>
            <sort>所属分类</sort>
            <top>置顶</top>
            <show>显示</show>
            <commend>推荐</commend>
            <snapimg>远程抓图</snapimg>
            <upsort>更新列表</upsort>
            <uphome>更新首页</uphome>
            <checktitle>检查标题是否重复</checktitle>
            <title>标题</title>
            <img>缩略图 (若写远程路径，自动抓取图片保存到本地)</img>
            <setimg>设第一幅图为缩略图</setimg>
            <path>路径 (不支持特殊符号；不建议输入纯数字，以免覆盖列表)</path>
            <keywords>Meta 关键词 (不填写自动补充，Max=250)</keywords>
            <description>Meta 简述 (不填写自动补充，Max=250)</description>
            <date>发布日期</date>
        </archive>
        
    </label>

    <check>
        <path>路径不能为空</path>
        <path1>路径格式错误</path1>
        <path2>路径重复，请另取名</path2>
        <sortname>分类名不能为空</sortname>
        <title>标题不能为空</title>
        <title1>标题不能重复</title1>
        <date>发布日期不能为空</date>
        <date1>日期格式错误</date1>
        <keywords>Meta 关键词 不能大于250个字符</keywords>
        <description>Meta 简述 不能大于250个字符</description>
    </check>
    
    <pop>
        <select>请选择一个栏目</select>
        <deleteok>删除成功</deleteok>
        <createok>成功生成</createok>
        <loading>正在左下角生成，你可以进行其他操作。</loading>
    </pop>

    <models title="模型管理">
        <add>添加模型</add>
        <edit>编辑模型</edit>
        <leadin>导入模型</leadin>
        <field title="字段管理">
            <add>添加字段</add>
            <edit>编辑字段</edit>
            <list>
                <id>ID</id>
                <name>表单文字</name>
                <ename>字段名</ename>
                <type>输入类型</type>
                <length>最大长度</length>
                <default>默认值</default>
                <key>索引</key>
                <action>操作</action>
            </list>
            <label>
                <name>表单文字</name>
                <ename>字段名 (索引字段，不能修改字段名)</ename>
                <type>输入类型</type>
                <length>最大长度</length>
                <default>默认值 (日期选择器可使用 date('Y-m-d',time()) 函数)</default>
                <key>索引</key>
                <value>值 (例：name:value)</value>
            </label>
            <check>
                <name>表单文字不能为空</name>
                <ename>字段名不能为空</ename>
                <ename1>只允许输入：字母、数字、下划线</ename1>
                <length>必须填写最大长度</length>
                <length1>必须为整数，请重新输入</length1>
                <value>值不能为空</value>
            </check>
            <type>
                <input>输入框</input>
                <textarea>文本框</textarea>
                <select>下拉列表框</select>
                <radio>单选框</radio>
                <checkbox>复选框</checkbox>
                <basic>简易编辑器</basic>
                <editor>内容编辑器</editor>
                <date>日期选择器</date>
                <upfile>文件上传框</upfile>
            </type>
        </field>
        <list>
            <id>ID</id>
            <name>模型名称</name>
            <ename>模型标识</ename>
            <addtable>附加表</addtable>
            <state>状态</state>
            <action>操作</action>
        </list>
        <label>
            <name>模型名称</name>
            <maintable>主索引表 (索引表不存在时，自动创建)</maintable>
            <ename>模型标识 (字母、数字、下划线；添加后不可修改)</ename>
            <fieldset>字段配置</fieldset>
            <fieldtip><![CDATA[添加模型后，点击 <img src="{$root}/system/images/os/fields.gif" class="os"/> 图标进行字段管理]]></fieldtip>
            <leadin>请选择模型文件 (xml格式文件)</leadin>
        </label>
        <check>
            <name>模型名称不能为空</name>
            <ename>模型标识不能为空</ename>
            <ename1>只允许输入：字母、数字、下划线</ename1>
            <table>{$table} 表不能作为主索引表</table>
        </check>
        <pop>
            <select>请选择一个模型</select>
            <deleteok>成功删除您选择的模型</deleteok>
            <deletefieldok>成功删除您选择的字段</deletefieldok>
            <deletefielderr>数据库字段可能已经被删除</deletefielderr>
        </pop>
    </models>
    
    <search title="搜索">
        <title>“{$keyword}”的搜索结果</title>
        <noresult>没有找到“{$keyword}”相关的搜索结果！</noresult>
    </search>
</lazycms>