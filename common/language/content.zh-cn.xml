<?xml version="1.0" encoding="utf-8"?>
<lazycms>
    <title>内容管理</title>
    <version>1.0</version>
    <author>Lukin</author>
    <email>mylukin@gmail.com</email>
    <source>http://www.lazycms.net</source>

    <common>
		<add>添加</add>
        <edit>编辑</edit>
		<save>保存</save>
		<cancel>取消</cancel>
		<lock>禁用</lock>
		<unlock>启用</unlock>
		<attr>更多属性</attr>
	</common>

    <onepage title="单页管理"></onepage>
    <article title="文档管理">
		<add>
            <sort>所属分类</sort>
            <path tip="不支持 &lt;\:*?&quot;|,;&gt; 字符，不能以/开始或结束">路径</path>
			<keywords tip="关键字之间用“英文逗号”或“空格”分开">关键词</keywords>
			<description tip="Meta简述，不要超过250个字符">Meta简述</description>
		</add>
		<pop>
			<addok>添加成功</addok>
			<editok>编辑成功</editok>
		</pop>
	</article>
    <trash title="回收站管理"></trash>
    <sort title="分类管理">
        <edit title="编辑分类"/>
		<add title="添加分类">
            <sort>所属分类</sort>
            <topsort>顶级分类</topsort>
            <name>分类名称</name>
            <path tip="不支持 &lt;\:*?&quot;|,;&gt; 字符，不能以/开始或结束">分类目录</path>
            <model tip="选择哪些内容类型使用此分类">内容类型</model>
            <defaultemplate>使用模型设置</defaultemplate>
            <sortemplate tip="列表页面的模板">列表模板</sortemplate>
            <pagetemplate tip="内容页面的模板">内容模板</pagetemplate>
		</add>
        <list>
            <name>分类名称</name>
            <model>内容类型</model>
            <count>文档数</count>
            <path>分类目录</path>
        </list>
		<check>
			<name>分类名称不能为空</name>
			<path>分类目录不能为空</path>
			<path1>路径错误</path1>
			<path2>路径重复</path2>
		</check>
		<pop>
			<addok>添加成功</addok>
			<editok>编辑成功</editok>
            <deleteok>删除成功</deleteok>
            <select>请选择一个分类</select>
		</pop>
	</sort>
    <model title="模型管理">
		<edit title="编辑模型"/>
		<add title="添加模型">
			<name>模型名称</name>
			<ename tip="模型英文名称，用来作为模板标签的一部分">模型标识</ename>
			<path tip="[b]生成文件的命名规则：[/b]&#13;%Y=4位数字表示的年份：1999 或 2008&#13;%y=2位数字表示的年份：99 或 08&#13;%m=数字表示的月份，01 到 12&#13;%d=月份中的第几天，01 到 31&#13;%I=ID编号&#13;%M=MD5值&#13;%P=标题拼音">生成规则</path>
            <sortemplate tip="列表页面的默认模板，此设置可以在分类管理里面被覆盖。">列表模板</sortemplate>
            <pagetemplate tip="内容页面的默认模板，此设置可以在分类管理里面被覆盖。">内容模板</pagetemplate>
			<fields title="字段管理">
				<add>添加字段</add>
				<edit>编辑字段</edit>
				<text tip="输入框前的说明文字">表单文字</text>
				<ename tip="必填，用处很多了，以下字段名已被系统使用：(id,order,date,hits,digg,path,description,isdel)">字段名</ename>
				<input>输入类型</input>
				<default tip="若输入类型为“日期选择器”&#13;可使用 date('Y-m-d',time()) 函数">默认值</default>
				<validate>需要验证</validate>
				<needtip>需要提示</needtip>
				<tiptext tip="鼠标移上去之后显示的气泡帮助">提示文字</tiptext>
				<value tip="例：name:value">序列值</value>
				<rules tip="可以有多个规则，使用“分号”分割。&#13;规则：字段名|类型|错误提示|其它">验证规则</rules>
				<length tip="只能输入数字，单位：字节">最大长度</length>
				<autokeywords>点亮自动获取关键词</autokeywords>
                <autodescription>点亮自动获取简述</autodescription>
			</fields>
		</add>
		<list>
			<name>模型名称</name>
			<ename>模型标识</ename>
			<table>数据表名</table>
			<state>状态</state>
		</list>
		<type>
			<input>输入框</input>
			<textarea>文本框</textarea>
			<select>下拉列表框</select>
			<radio>单选框</radio>
			<checkbox>复选框</checkbox>
			<basic>简易编辑器</basic>
			<editor>内容编辑器</editor>
			<date>日期选择器</date>
			<upfile>文件上传框</upfile>
		</type>
		<validate>
			<empty err="必填项，不能为空">不能为空</empty>
			<limit err="内容长度必须是1-100个字符">限制长度</limit>
			<equal err="两个值的内容不相等">对比两个值相等</equal>
			<email err="邮箱格式不正确">电子邮箱</email>
			<letter err="必须是英文字母">英文字母</letter>
			<number err="必须是数字">必须是数字</number>
			<url err="输入的网址格式不正确">匹配网址</url>
			<custom err="这里是错误提示" reg="这里是正则表达式">自定义验证</custom>
		</validate>
		<check>
			<name>模型名称不能为空</name>
			<label>表单文字不能为空</label>
			<ename>此项不能为空</ename>
			<ename1>此项只能使用：字母、数字、下划线、中杠</ename1>
			<ename2>模型标识重复，请更换</ename2>
            <restrict>此字段名已被系统使用</restrict>
			<length>最大长度不能为空</length>
			<length1>最大长度必须为数字</length1>
		</check>
		<pop>
			<addok>添加成功</addok>
			<editok>编辑成功</editok>
            <deleteok>删除成功</deleteok>
            <select>请选择一个模型</select>
            <success>操作成功</success>
		</pop>
	</model>
</lazycms>