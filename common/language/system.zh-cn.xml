<?xml version="1.0" encoding="utf-8"?>
<lazycms>
    <title>系统管理</title>
    <version>1.0</version>
    <author>Lukin</author>
    <email>mylukin@gmail.com</email>
    <source>http://www.lazycms.net</source>

    <common>
        <backhome>回首页</backhome>
        <action>操作</action>
        <back>返回</back>
        <close>关闭</close>
        <save>保存</save>
        <insert>插入</insert>
        <reset>重置</reset>
        <tryagain>重试</tryagain>
        <up>更新</up>
        <submit>提交</submit>
		<apply>应用</apply>
        <selectall>全选</selectall>
        <reselect>反选</reselect>
        <delete>删除</delete>
        <create>生成</create>
        <about>关于</about>
        <help>帮助</help>
        <config>设置</config>
        <default>默认</default>
		<on>√</on>
		<off>×</off>
		<unit>
			<item>条</item>
		</unit>
        <preview>预览网站</preview>
        <logout>退出登录</logout>
		<osite>官方网站</osite>
		<forums>支持论坛</forums>
    </common>

	<confirm>
        <logout>确定要退出吗？</logout>
        <reset>确定要重置吗？</reset>
        <back>确定要返回吗？</back>
        <clear>确定要清空吗？</clear>
        <delete>确定要删除吗？</delete>
    </confirm>
	
	<login title="管理后台登录">
        <name>用户名</name>
        <pass><![CDATA[密&nbsp; &nbsp;码]]></pass>
        <cookie label="有效期">
            <option1>浏览器进程</option1>
            <option2>一小时</option2>
            <option3>一天</option3>
            <option4>一周</option4>
            <option5>一个月</option5>
            <option6>永久</option6>
        </cookie>
        <language><![CDATA[语&nbsp; &nbsp;言]]></language>
        <submit>登录</submit>
        <description><![CDATA[<p>请使用有效的用户名和密码登录后台。</p><p>运行环境：PHP 5+、MySQL 4.1+</p><p><a href="{$root}">返回网站首页</a></p>]]></description>
        <check>
            <name>管理员名称不能为空或过长</name>
            <pass>管理员密码不能为空或过长</pass>
            <error1>会员名不存在或已被停用！</error1>
            <error2>密码有误，请重新输入！</error2>
        </check>
		<success>登录成功，请稍后3秒钟自动跳转到后台。</success>
	</login>

    <system title="管理后台">
        <manage>系统管理</manage>
        <cpanel>控制面板</cpanel>
    </system>
    <webftp title="文件管理"></webftp>
    <module title="安装卸载"></module>
	<shortcut title="快捷方式">
        <add title="添加快捷方式">
            <name>名称</name>
            <url>网址</url>
            <sort>分类</sort>
            <sortname>分类名称</sortname>
			<icon>图标</icon>
        </add>
        <button>
            <delete>删除</delete>
            <create>新建分类</create>
            <add>添加</add>
            <edit>修改</edit>
            <cancel>取消</cancel>
        </button>
        <check>
			<name>名称不能为空</name>
			<url>网址不能为空</url>
            <sortname>分类名称不能为空</sortname>
            <sortname1>分类名称已经存在</sortname1>
			<selectsort>请先创建一个分类</selectsort>
        </check>
    </shortcut>

	<settings title="全局设置">
		<site title="网站设置">
			<sitename tip="输入该网站的名称。">网站名称</sitename>
			<rssnumber tip="RSS Feed 显示最新的多少条。">RSS Feed</rssnumber>
			<language tip="网站默认使用的语言包。">界面语言</language>
		</site>
        <user title="会员设置">
            <allowreg title="允许注册" tip="若设为是，则允许用户注册。">
                <true>是</true>
                <false>否</false>
            </allowreg>
            <group tip="前台注册会员的默认分组">新注册组</group>
            <active title="激活帐号" tip="若设为是，将通过E-mail把激活会员帐号的链接发送给刚注册的用户。只有通过该链接激活帐号之后用户才能登录本站。">
                <true>是</true>
                <false>否</false>
            </active>
        </user>
		<upload title="上传设置">
			<allowext tip="填写允许上传的文件扩展名，以英文“,”逗号分隔。">允许的文件类型</allowext>
			<maxsize tip="可上传文件的最大尺寸（单位：字节）。如为“0”则无限制。">最大上传尺寸</maxsize>
			<filepath tip="非图片文件的存储文件夹路径。">上传文件路径</filepath>
			<imagepath tip="图片文件的存储文件夹路径。">上传图片路径</imagepath>
			<imageext tip="填写允许上传的图片文件扩展名，以英文“,”逗号分隔。用来检验有效的图片头信息。">允许的图片类型</imageext>
		</upload>
		<server title="服务器设置">
			<timezone tip="选择服务器所在的时区，当前选择：&#13;{$zone}">时区设置</timezone>
            <dsnconfig tip="填写数据库连接字符串，连接字符串格式请将鼠标移到[img]../../common/images/icon/help.png[/img]查看。">数据库设置</dsnconfig>
            <dsnformat tip="sqlite://path=数据库路径&#13;mysql://用户名:[密码]@主机名:[端口][/数据库前缀]/数据库名称&#13;mysqli://用户名:[密码]@主机名:[端口][/数据库前缀]/数据库名称">数据库字符串格式</dsnformat>
		</server>
        <check>
            <sitename>网站名称不能为空</sitename>
            <allowext>必须填写允许上传的文件类型</allowext>
            <errorext>格式错误，以英文“,”逗号分隔。</errorext>
            <maxsize>不能为空，如不限制，则填“0”。</maxsize>
            <maxsize1>格式错误，必须是数字。</maxsize1>
            <filepath>上传的文件路径不能为空</filepath>
            <imagepath>上传的图片路径不能为空</imagepath>
            <errorpath>路径格式错误，不支持特殊符号，不能以/开始或结束</errorpath>
            <imageext>必须填写允许上传的图片类型</imageext>
            <dsnconfig>数据库连接字符串不能为空</dsnconfig>
            <dsnconfig1>数据库连接字符串格式不正确</dsnconfig1>
        </check>
        <success>设置保存成功。</success>
	</settings>
    
    <users title="用户管理">
        <group title="用户组管理">
            <edit title="编辑用户组" />
            <add title="添加用户组">
                <name tip="填写用户组名称。">用户组名称</name>
				<logo tip="填写用户组标识，不可修改。">用户组标识</logo>
                <purview tip="选择用户组所拥有的权限。">用户组权限</purview>
            </add>
            <list>
                <name>用户组名称</name>
                <logo>用户组标识</logo>
                <addtable>附属表</addtable>
                <count>用户数</count>
            </list>
			<check>
				<name>用户组名称不能为空</name>
                <name1>用户组名称不能重复</name1>
				<logo>用户组标识不能为空</logo>
                <logo1>用户组标识不能重复</logo1>
			</check>
            <pop>
                <addok>用户组添加成功</addok>
                <editok>用户组编辑成功</editok>
                <deleteok>用户组删除成功，系统用户组不能被删除。</deleteok>
                <select>请先选择一个用户组</select>
            </pop>
        </group>
        <user>
            <edit title="编辑用户" />
            <add title="添加用户">
                <group tip="请选择所属的用户组。">所属用户组</group>
                <name tip="填写用户名，1-30个字符。">用户名</name>
                <pass tip="编辑用户时，密码若为空则不修改，6-30个字符。">密码</pass>
                <pass1 tip="请重复输入密码的内容。">确认密码</pass1>
                <mail tip="填写用户的电子邮箱。">电子邮箱</mail>
                <question tip="取回密码时用的提示问题。">提示问题</question>
                <answer tip="取回密码时用的提示答案。">提示答案</answer>
                <language tip="用户登录网站所使用的界面语言。">界面语言</language>
                <editor tip="默认使用的在线编辑器。">编辑器</editor>
            </add>
			<list>
				<name>用户名</name>
				<mail>Email</mail>
				<language>语言</language>
				<regdate>注册时间</regdate>
				<state>状态</state>
			</list>
            <check>
				<name>用户名不能为空</name>
                <name1>用户名不能重复</name1>
                <pass>两次输入的密码不一致</pass>
                <pass1>密码长度不正确</pass1>
                <mail>邮箱不能为空</mail>
                <mail1>邮箱格式不正确</mail1>
			</check>
            <pop>
                <addok>用户添加成功</addok>
                <editok>用户编辑成功</editok>
                <deleteok>用户删除成功</deleteok>
                <select>请先选择一个用户</select>
            </pop>
        </user>
    </users>

	<sysinfo title="系统信息">
		<server_os>服务器系统</server_os>
		<dbversion>数据库版本</dbversion>
		<phpversion>PHP版本</phpversion>
		<software>服务器解译引擎</software>
		<gdversion>GD版本</gdversion>
		<php_sapi_name>PHP接口</php_sapi_name>
		<system_version>LazyCMS版本</system_version>
		<useragent>浏览器类型</useragent>
		<phpsettings title="PHP设置">
			<safe_mode>安全模式</safe_mode>
            <allow_url_fopen>打开远程连接</allow_url_fopen>
			<open_basedir>开放根目录</open_basedir>
			<display_errors>显示错误</display_errors>
			<file_uploads>文件上传</file_uploads>
			<magic_quotes_gpc>魔术引用</magic_quotes_gpc>
			<xml>XML开启</xml>
			<zlib>Zlib开启</zlib>
			<disable_functions>已关闭的功能</disable_functions>
			<mbstring>mbstring启用</mbstring>
			<iconv>iconv可用</iconv>
            <upload_max_filesize>最大上传文件</upload_max_filesize>
            <post_max_size>最大POST数据</post_max_size>
		</phpsettings>
        <settings>配置信息</settings>
        <directory title="目录属性">
			<path>路径</path>
			<read>可读</read>
			<write>可写</write>
		</directory>
        <phpinfo>PHP信息</phpinfo>
	</sysinfo>
    
    <error>
        <title>系统发生错误</title>
        <position>错误位置</position>
        <errinfo>错误信息</errinfo>
		<overtime>您的登录已经超时，请重新登录！</overtime>
        <function><![CDATA[未定义的函数：{$fun}<br/>请在 {$file} 定义一个 {$fun} 函数]]></function>
        <lazydefault>请在 {$file} 定义一个 lazy_default() 函数</lazydefault>
        <createfile>创建文件失败：{$file}</createfile>
        <writefile>写入文件失败：{$file}</writefile>
		<db>
			<config>数据库连接字符串，设置错误。</config>
			<nodbext>-_-!!竟然没有{$name}扩展支持，请先开启{$name}扩展支持！</nodbext>
			<nolink>数据库链接出错，请检查数据库设置！</nolink>
			<noselect>没有找到指定的数据库！</noselect>
			<nodbver>MySQL数据库版本低于4.1，请升级你的MySQL数据库！</nodbver>
		</db>
    </error>
    
</lazycms>